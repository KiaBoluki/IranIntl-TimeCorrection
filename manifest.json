{
  "manifest_version": 3,
  "name": "Time Tag Updater",
  "version": "1.0",
  "description": "Updates all <time> tags on a webpage by adding 4 hours to their datetime attribute.",
  "permissions": ["activeTab"],
  "action": {
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://www.iranintl.com/*"],
      "js": ["content.js"]
    }
  ]
}
